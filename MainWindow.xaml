<Window x:Class="LEA_Nermin_Alajlani_Stanislav_Kharchenko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LEA_Nermin_Alajlani_Stanislav_Kharchenko"
        Title="MainWindow" Height="550" Width="850">

    <Window.Resources>
        <local:StringIstLeerOderNullKonverter x:Key="StringIstLeerOderNullKonverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="450"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" 
                Name="txtOutput"
                Background="#aaaa"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="MessageInput" Grid.Column="0" 
                    Text="Nachricht Schreiben ..." 
                    TextChanged="MessageInput_TextChanged"
                    GotFocus="MessageInput_GotFocus"
                    LostFocus="MessageInput_LostFocus"/>

                <Button Content="➤" Background="Gainsboro" 
                    Click="BtnSend_Click" 
                    ToolTip="Normale Nachricht senden" 
                    FontSize="30"
                    Grid.Column="1"/>
                <Button Content="🔐" 
                    FontSize="30"
                    Grid.Column="2" Background="Gainsboro" 
                    Click="BtnSecretSend_Click" 
                    ToolTip="Verschlüsselte Nachricht senden"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image Source="Profie.jpg" Grid.Row="0" 
                Height="100" Width="100" 
                HorizontalAlignment="Center"/>

            <ComboBox x:Name="COM" Grid.Row="1" 
                Width="100" Height="30" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                SelectionChanged="COM_SelectionChanged"/>
            <TextBlock Text="COM-Port" Foreground="Gray" Grid.Row="1"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=COM}" Value="-1">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <TextBox Name="txtUser" Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="150" Height="50"
                FontSize="16"
                GotFocus="MessageInput_GotFocus"
                LostFocus="MessageInput_LostFocus"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>
            <TextBlock Text="Benutzername" Foreground="Gray" 
                Grid.Row="2"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                FontSize="16"
                IsHitTestVisible="False"
                Visibility="{Binding Text, ElementName=txtUser, Converter={StaticResource StringIstLeerOderNullKonverter}}"/>

            <PasswordBox Name="txtPassword" Grid.Row="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="150" Height="30"                             
                VerticalContentAlignment="Center"
                ToolTip="Gib dein Passwort ein."/>
            <TextBox Name="txtPasswordVisible" Grid.Row="3"
                Width="150" Height="30"
                Visibility="Collapsed"                        
                VerticalContentAlignment="Center"/>

            <CheckBox Name="chkShowPassword" Grid.Row="4" 
                HorizontalAlignment="Left"
                Margin="23,0,0,0"
                Content="Passwort anzeigen" 
                Checked="chkShowPassword_Checked" 
                Unchecked="chkShowPassword_Unchecked"/>

            <Button x:Name="BtnLogin" Grid.Row="5"
                Width="100" Height="30"
                Content="Anmelden" 
                Click="BtnLogin_Click" 
                ToolTip="Einloggen/Ausloggen"/>
        </Grid>
    </Grid>
</Window>