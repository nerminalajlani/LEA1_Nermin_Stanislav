<Window x:Class="LEA_Nermin_Alajlani_Stanislav_Kharchenko.PasswordPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passwort eingeben" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Bitte Passwort eingeben:" Margin="0,0,0,10"/>
        <PasswordBox x:Name="pwdBox" Height="25" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,5,0" Click="Ok_Click"/>
            <Button Content="Abbrechen" Width="60" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
